<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Emergency Messages</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #000;
      color: lime;
      margin: 0;
      padding: 20px;
    }

    h2 {
      color: red;
      text-align: center;
      font-size: 36px;
      margin-bottom: 20px;
    }

    .emergencyCard {
      background: rgba(0, 0, 0, 0.95);
      border: 3px solid red;
      border-radius: 16px;
      padding: 40px 20px;
      margin: 30px auto;
      color: red;
      width: 95%;
      text-align: center;
      font-size: 24px;
      line-height: 1.6;
      box-shadow: 0 0 25px rgba(255,0,0,0.7);
    }

    .emergencyCard img {
      max-width: 100%;
      border-radius: 12px;
      margin-top: 20px;
    }

    .emergencyCard a {
      color: lime;
      font-weight: bold;
      font-size: 22px;
      text-decoration: underline;
    }

    .btn {
      display: inline-block;
      margin: 15px 10px 0;
      padding: 10px 20px;
      font-size: 18px;
      border-radius: 8px;
      cursor: pointer;
      border: none;
      font-weight: bold;
    }
    #editBtn { background: lime; color: black; }
    #editBtn:hover { background: #99ff33; }
    #deleteBtn { background: red; color: white; }
    #deleteBtn:hover { background: darkred; }
  </style>
</head>
<body>

  <h2>🚨 Emergency Message 🚨</h2>
  <div id="emergencyContainer">Loading message...</div>

  <!-- Firebase -->
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-auth-compat.js"></script>

  <script>
    // -------------------------
    // Firebase config
    // -------------------------
    const firebaseConfig = {
      apiKey: "AIzaSyB5zWUvl64s6wAjjeXd0mCUyhMEdzg_MmM",
      authDomain: "usahackersland.firebaseapp.com",
      projectId: "usahackersland",
      storageBucket: "usahackersland.appspot.com",
      messagingSenderId: "588407428267",
      appId: "1:588407428267:web:7c4898cbb62efd3d5953ee",
      measurementId: "G-ZJ05T7YNSQ"
    };

    firebase.initializeApp(firebaseConfig);
    const db = firebase.firestore();
    const auth = firebase.auth();
    const container = document.getElementById("emergencyContainer");

    // 🔑 Change to your real admin email
    const ADMIN_EMAIL = "admin@gmail.com";

    // -------------------------
    // Real-time listener for ONLY ONE doc
    // -------------------------
    db.collection("emergency").doc("current")
      .onSnapshot(doc => {
        if (!doc.exists) {
          container.innerHTML = "<p style='color:red; font-size:22px;'>🚨 No emergency message right now.</p>";
          return;
        }

        const data = doc.data();
        let html = `
          <div class="emergencyCard">
            ${data.text ? `<p>${data.text}</p>` : ""}
            ${data.image ? `<img src="${data.image}" alt="Emergency Image">` : ""}
            ${data.phone ? `<p>📞 Call: <a href="tel:${data.phone}">${data.phone}</a></p>` : ""}
            ${data.link ? `<p>🔗 More info: <a href="${data.link}" target="_blank">${data.link}</a></p>` : ""}
            <div id="adminControls" style="display:none;">
              <button id="editBtn" class="btn">✏️ Edit</button>
              <button id="deleteBtn" class="btn">🗑️ Delete</button>
            </div>
          </div>
        `;
        container.innerHTML = html;

        // Add button functionality only if admin
        auth.onAuthStateChanged(user => {
          if (user && user.email === ADMIN_EMAIL) {
            document.getElementById("adminControls").style.display = "block";

            document.getElementById("editBtn").addEventListener("click", async () => {
              const newText = prompt("✏️ Enter new emergency text:");
              if (newText) {
                await db.collection("emergency").doc("current").update({
                  text: newText,
                  timestamp: firebase.firestore.FieldValue.serverTimestamp()
                });
                alert("✅ Emergency message updated!");
              }
            });

            document.getElementById("deleteBtn").addEventListener("click", async () => {
              if (confirm("⚠️ Are you sure you want to delete this emergency message?")) {
                await db.collection("emergency").doc("current").delete();
                container.innerHTML = "<p style='color:red; font-size:22px;'>🚨 No emergency message right now.</p>";
                alert("🗑️ Emergency message deleted.");
              }
            });
          }
        });
      });
  </script>

</body>
</html>
