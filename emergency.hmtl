<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Emergency Messages</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #000;
      color: lime;
      margin: 0;
      padding: 20px;
    }

    h2 {
      color: red;
      text-align: center;
      font-size: 36px;
      margin-bottom: 20px;
    }

    #emergencyContainer {
      max-height: 90vh;       /* âœ… limit height */
      overflow-y: auto;       /* âœ… scroll if too many messages */
      padding-right: 10px;
    }

    .emergencyCard {
      background: rgba(0, 0, 0, 0.95);
      border: 3px solid red;
      border-radius: 16px;
      padding: 40px 20px;
      margin: 30px auto;
      color: red;
      width: 95%;             /* âœ… almost full screen */
      text-align: center;
      font-size: 24px;        /* âœ… bigger text */
      line-height: 1.6;
      box-shadow: 0 0 25px rgba(255,0,0,0.7);
      transition: all 0.3s ease;
    }

    .emergencyCard img {
      max-width: 100%;
      border-radius: 12px;
      margin-top: 20px;
    }

    .emergencyCard a {
      color: lime;
      font-weight: bold;
      font-size: 22px;
      text-decoration: underline;
    }

    .flash {
      animation: flashAnimation 1s ease;
    }

    @keyframes flashAnimation {
      0% { background-color: rgba(255,0,0,0.2); }
      50% { background-color: rgba(255,0,0,0.5); }
      100% { background-color: rgba(0,0,0,0.95); }
    }
  </style>
</head>
<body>

  <h2>ðŸš¨ Emergency Messages ðŸš¨</h2>
  <div id="emergencyContainer">Loading messages...</div>

  <!-- Firebase -->
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-firestore-compat.js"></script>

  <script>
    // -------------------------
    // Firebase config
    // -------------------------
    const firebaseConfig = {
      apiKey: "AIzaSyB5zWUvl64s6wAjjeXd0mCUyhMEdzg_MmM",
      authDomain: "usahackersland.firebaseapp.com",
      projectId: "usahackersland",
      storageBucket: "usahackersland.appspot.com", // âœ… fixed
      messagingSenderId: "588407428267",
      appId: "1:588407428267:web:7c4898cbb62efd3d5953ee",
      measurementId: "G-ZJ05T7YNSQ"
    };

    firebase.initializeApp(firebaseConfig);
    const db = firebase.firestore();
    const container = document.getElementById("emergencyContainer");

    // -------------------------
    // Real-time listener for ALL docs in emergency
    // -------------------------
    db.collection("emergency").orderBy("timestamp", "desc")
      .onSnapshot(snapshot => {
        if (snapshot.empty) {
          container.innerHTML = "<p style='color:red; font-size:22px;'>ðŸš¨ No emergency messages at the moment.</p>";
          return;
        }

        let html = "";
        snapshot.forEach(doc => {
          const data = doc.data();
          html += `
            <div class="emergencyCard flash">
              ${data.text ? `<p>${data.text}</p>` : ""}
              ${data.image ? `<img src="${data.image}" alt="Emergency Image">` : ""}
              ${data.phone ? `<p>ðŸ“ž Call: <a href="tel:${data.phone}">${data.phone}</a></p>` : ""}
              ${data.link ? `<p>ðŸ”— More info: <a href="${data.link}" target="_blank">${data.link}</a></p>` : ""}
            </div>
          `;
        });

        container.innerHTML = html;

        // âœ… Auto-scroll to the top (latest message)
        container.scrollTo({ top: 0, behavior: "smooth" });
      });
  </script>

</body>
</html>
